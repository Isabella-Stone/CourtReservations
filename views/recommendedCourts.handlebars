<h1>Recommended Courts</h1>
{{#if error}}
  <div class="error">
    <p>{{error}}</p>
  </div>
{{/if}}

<main>
    <script
    src="https://maps.googleapis.com/maps/api/js?key={{apiKey}}&callback=Function.prototype"></script>
    <form
    action="/courts/recommend/"
    method="POST"
    id="recommendCourtsForm"
    >
        <label for="courtType">Select a court type:</label>
        <select name="courtType" id="courtType">
            <option value="basketball">Basketball</option>
            <option value="tennis">Tennis</option>
            <option value="pickleball">Pickleball</option>
            <option value="volleyball">Volleyball</option>
        </select>
        <br />
        <input type="submit" class="submit" />
    </form>
    {{#if courts}}
        <h2>{{courtType}} courts with mostly {{experienceLevel}} players</h2>
        {{#each courts}}
            <div class="court-card">
                <h3>{{this.name}}</h3>
                <p>{{this.type}}</p>
                <p>
                {{this.address}},
                {{this.city}},
                {{this.state}}
                {{this.zip}}</p>
                <p>{{this.distance}}</p>
                <a href="/courts/{{this._id}}">Click for Details</a>
            </div>
        {{/each}}
    {{else}}
        <p>No Courts Recommended at this time.</p>
    {{/if}}
</main>