<h1>{{title}}</h1>
<main>
  <div class="parent">
    <div class="child2">
      <h2>Available Courts</h2>
        {{#each courts}}
          <div class="court-card">
              <h2>{{this.name}}</h2>
              <p>{{this.type}}</p>
              <p>
                {{this.address}},
                {{this.city}},
                {{this.state}}
                {{this.zip}}</p>
              <a href="/courts/{{this._id}}">Click for Details</a>
          </div>
        {{/each}}
      </ul>
    </div>

    <div class="child3">
      <h2>Upcoming Reservations: </h2>
      <ul>
      </ul>
    </div>
  </div>
</main>