<main>
  <div class="centered">
    <h1>Edit {{courtName}}</h1>
    <form action="/courts/{{courtId}}/editCourt" id="form" method="post" class="centered">
      <label for="name">Court Name:</label>
      <input id="name" name="name" type="text" />
      <br />
      <label for="capacity">Capacity:</label>
      <input name="capacity" id="capacity" type="text" />
      <br />
      <label for="courtOpening">Court Opening Time:</label>
      <input name="courtOpening" id="courtOpening" type="time" />
      <br />
      <label for="courtClosing">Court Closing Time:</label>
      <input name="courtClosing" id="courtClosing" type="time" />
      <br />
      <button type="submit">Save Changes</button>
    </form>
    <br>
 <form action="/courts/{{courtId}}/editCourt/deleting" id="delete-court-form" method="post" class="centered">
  <button id="delete-court-btn">Delete Court</button>
</form>
  <script>
       const deleteButton = document.getElementById("delete-court-btn");
       deleteButton.addEventListener("click", handleDeleteClick);

      function handleDeleteClick(event) {
        event.preventDefault(); 
        const confirmed = confirm("Are you sure you want to delete this court? All reservations will be canceled.");
        if (confirmed) {
          document.getElementById("delete-court-form").submit();
        }
      }
    </script>
  <script>
    window.addEventListener('load', function() {
      document.getElementById('name').value = "{{{courtName}}}";
      document.getElementById('capacity').value = '{{capacity}}';
      document.getElementById('courtOpening').value = '{{opening}}';
      document.getElementById('courtClosing').value = '{{closing}}';
    });
  </script>
    <div id="error-div" class="centered"></div>
    <p>{{bad}}</p>
   <script src="/public/js/editCourt.js"></script>
  </div>
</main>